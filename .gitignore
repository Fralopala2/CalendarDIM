# =============================================================================
# .gitignore para Proyecto Calendario - Solo archivos esenciales para offline
# =============================================================================

# Excluir toda la carpeta .kiro (especificaciones y documentación de desarrollo)
.kiro/

# Excluir todos los tests y archivos de testing
calendario/tests/
*Test.php
*test.php
run_tests.bat
*.test.*

# Excluir archivos de documentación y desarrollo
*.md
README*
CHANGELOG*
TODO*
NOTES*
*.txt
*.pdf

# Excluir archivos de configuración de desarrollo
.vscode/
.idea/
*.code-workspace
.editorconfig

# Excluir archivos de sistema
.DS_Store
Thumbs.db
desktop.ini
*.tmp
*.temp
*.log

# Excluir archivos de backup y temporales
*.bak
*.backup
*.old
*.orig
*~
*.swp
*.swo

# Excluir archivos de base de datos (mantener solo el schema)
*.sql
!calendario/database/calendario_enhanced.sql

# Excluir archivos de migración y utilidades de desarrollo
calendario/database/migrate*.php
calendario/database/test_*.php
calendario/validate_*.php

# Excluir archivos de Git
.git/
.gitattributes

# Excluir archivos de Node.js (si los hubiera)
node_modules/
package*.json
yarn.lock

# Excluir archivos de Composer (si los hubiera)
vendor/
composer.json
composer.lock

# Excluir archivos de configuración específicos del entorno
config.local.php
.env
.env.local
.env.production

# Excluir archivos de logs y cache
logs/
cache/
*.cache

